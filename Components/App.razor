@using BlazorApp.Components.Shared
@using Microsoft.AspNetCore.Components.Web
@using myapp.Components.Layout

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="myapp.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <BlazorApp.Components.Shared.CustomErrorBoundary ShowDetails="true">
        <Routes />
    </BlazorApp.Components.Shared.CustomErrorBoundary>
    <script src="_framework/blazor.web.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.showAlert = (message, type) => {
            alert(message);
            return true;
        };

        window.confirmAction = (message) => {
            return confirm(message);
        };
    </script>
</body>

</html>
